<div class="text-center">
  <h1>Workoutの編集</h1>
</div>

<% if logged_in? %>
  <div class = "container">
    
    <div class='row'>
      <div class='col-sm-8 offset-sm-2 col-10 offset-1'>
        <%= form_with(model: @post, local: true) do |f| %>
        
          <div class='row'>
            <div class='col-sm-6'>
              <div class= "form-group">
                <%= f.label :title, '部位' %>
                <%= f.text_field :title, class: 'form-control' %>
              </div>
            </div>
          </div>
        
          <div class='row'>
            <div class='col-sm-10'>
              <div class = "form-group">
                <%= f.label :content, 'トレーニング内容' %>
                <%= f.text_area :content, class: 'form-control',rows: 10 %>
              </div>
            </div>
          </div>
      
          <div class='row'> 
            <div class='col-sm-10'>
              <div class = "form-group">
                <%= f.label :img, '画像' %>
                <%= f.file_field :img, class: 'form-control' %>
              </div>
            </div>
          </div>
      
          <div class='col-sm-4 offset-sm-4'>
            <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
          </div>
    
        <% end %>
      </div>
    </div>
  </div>